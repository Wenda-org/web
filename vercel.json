{
  "builds": [{ "src": "package.json", "use": "@vercel/static-build" }],
  "outputDirectory": "dist",
  "routes": [
    { "handle": "filesystem" },
    // Proxy API requests to the backend to avoid CORS issues from the browser.
    {
      "src": "/api/(.*)",
      "dest": "https://backend-core-v42h.onrender.com/api/$1"
    },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
